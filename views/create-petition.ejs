    editor.on('keyup', function(e) {
        
        console.log(tinymce.activeEditor.getContent());
        document.getElementById('survey_body').value = tinymce.activeEditor.getContent();
        handleChange('' , 'survey_body' , {required : true});
    });
  },
  toolbar: "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | outdent indent' numlist bullist",
  menubar: 'favs file edit view table',
